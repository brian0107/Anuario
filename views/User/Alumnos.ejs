<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"/>
    <title>Anuario: Alumnos</title>
  </head>

  <div style="padding: 0px 75px 0px 80px;" class="container-sm">

  <header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="Inicio">ISC ANUARIO ESCOLAR</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="Alumnos">Alumnos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="Proyectos">Proyectos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="Cerrar">Cerrar Sesión</a>
            </li>
          </ul>
          <form action="/Search" method="post" class="d-flex" role="search">
            <input type="hidden" name="tipo" value="alumnos">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
              name="search"
            />
            <button class="btn btn-outline-success" type="submit">
              Search
            </button>
          </form>
        </div>
      </div>
    </nav>
  </header>
 
  <body>
    
     <h2 style="text-align: center;">Alumnos</h2>

      <div class="row row-cols-1 row-cols-md-2 g-4">
     <%rows.forEach(persona =>{%>
      <div class="card mb-3" style="max-width: 500px">
        <div class="row g-0">
          <div class="col-md-4">
            <img
              src="/img/<%=persona.Imagen%>"
              class="img-fluid rounded-start"
              alt="..."
            />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= capitalize(persona.nombreCompleto)%></h5>
              <p class="card-text"><%= persona.habilidadesFortalezas%></p>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Numero de Control: <%= persona.numControl%></li>
                <li class="list-group-item">Edad: <%= persona.Edad%></li>
                <li class="list-group-item">Teléfono: <%= persona.Telefono%></li>
                <li class="list-group-item">Correo: <%= persona.Correo%></li>
                <li class="list-group-item">Carrera: <%= persona.Carrera%></li>
                <li class="list-group-item">Promedio: <%= persona.Promedio%></li>
              </ul>
              <p class="card-text">
                <small class="text-body-secondary">Instituto Tecnologico Nacional</small>
              </p>
            </div>
          </div>
        </div>
      </div>
    
      <%})%>
      </div>
  </div>
</div>
  </body>
</html>

<% function capitalize(str) {
  return str.replace(/\b\w/g, function(l){ return l.toUpperCase() })
}
%>
