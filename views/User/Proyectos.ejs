<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
    />
    <title>Anuario: Proyectos</title>
  </head>
  <div style="padding: 0px 75px 0px 80px" class="container-sm">

  <header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="Inicio">ISC ANUARIO ESCOLAR</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="Alumnos">Alumnos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="Proyectos">Proyectos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="Cerrar">Cerrar Sesión</a>
            </li>
          </ul>
          <form action="/Search" method="post" class="d-flex" role="search">
            <input type="hidden" name="tipo" value="proyectos">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
              name="search"
            />
            <button class="btn btn-outline-success" type="submit">
              Search
            </button>
          </form>
        </div>
      </div>
    </nav>
  </header>

  <body>
    
      <h2 style="text-align: center">Proyectos</h2>

      <div class="row row-cols-1 row-cols-md-2 g-4">
        <%rows.forEach(proyecto =>{%>
        <div class="card" style="max-width: 500px">
          <img src="/img/<%=proyecto.Imagen%>" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title"><%= capitalize(proyecto.Nombre)%></h5>
            <p class="card-text">Descripción: <%= proyecto.Descripcion%></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Autor: <%=proyecto.Autor%></li>
          </ul>
        </div>
        <%})%>
      </div>
    </div>
  </body>
</html>

<% function capitalize(str) {
  return str.replace(/\b\w/g, function(l){ return l.toUpperCase() })
}
%>
